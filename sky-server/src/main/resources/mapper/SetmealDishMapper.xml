<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">


    <select id="getSetmealDishIds" resultType="java.lang.Long">
        select setmeal_id from setmeal_dish
        <foreach collection="dishIds" item="dishId" open="where id in (" close=")" separator=",">
            #{dishId}
        </foreach>
    </select>

    <insert id="insertBatch">
        INSERT INTO setmeal_dish(setmeal_id, dish_id, name, price, copies) VALUES
        <foreach collection="setmealDish" item="item" separator=",">
        (#{item.setmealId}, #{item.dishId}, #{item.name}, #{item.price}, #{item.copies})
        </foreach>
    </insert>
</mapper>
